        <img src="images/study.jpg" alt="person-studying">
    </div>
        
    <div class="footer">
        <a href="#default" class="logo">E-Course</a>
        <div class="footer-right">
            <p>Copyright E-Course Management</p>
        </div>
    </div>

<script>
var modal = document.getElementById('id01');

window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}

var modal2 = document.getElementById('id02');

window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}

const pass = document.getElementById('pass');
const cpsw = document.getElementById('cpsw');
const msg = document.getElementById('msg');
const registerBtn = document.getElementById('register');
registerBtn.disabled = true;
registerBtn.style.cursor = "not-allowed"

cpsw.addEventListener('keyup', (e) => {
    if (pass.value !== e.target.value) {
        msg.style.color = 'red';
        msg.style.display = 'block';
        registerBtn.disabled = true;
        registerBtn.style.cursor = "not-allowed"
    } else {
        msg.style.display = 'none';
        registerBtn.disabled = false;
        registerBtn.style.cursor = "pointer"
    }
});

</script>

</body>
</html>